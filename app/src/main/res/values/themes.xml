<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.LoginApp" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.LoginApp" parent="Base.Theme.LoginApp" />

    <style name="BACKGROUND">
        <item name="android:background">#FFF</item>
    </style>

    <style name="VALIDATOR">
        <item name="android:textColor">#ED2626</item>
    </style>

    <style name="BUTTON">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/button_smoother</item>
    </style>

    <style name="SWITCH">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/button_smoother</item>
        <item name="colorSwitchThumbNormal">#FFF</item>
    </style>

    <style name="TEXT">
        <item name="android:background">@drawable/dark_borders</item>
        <item name="android:textColorHint">@color/design_default_color_on_secondary</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="SHOW">
        <item name="android:background">@drawable/baseline_remove_red_eye_24</item>
    </style>
</resources>